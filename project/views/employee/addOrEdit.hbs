<div class="container">
    <h2 align="center">{{viewTitle}}</h2>
    <hr>
    <form action="/employee" method="POST" autocomplete="off">
        <input type="hidden" name="_id" value="{{employee._id}}">
        <div class="form-row">
            <div class="form-group col-md-4">
                <label>Employee Name</label>
                <input type="text" class="form-control" name="fullName" placeholder="Employee Name"
                    value="{{employee.fullName}}">
                <div class="text-danger">
                    {{employee.fullNameError}}</div>
            </div>

            <div class="form-group col-md-4">
                <label>Employee ID</label>
                <input type="text" class="form-control" name="empID" placeholder="Employee ID"
                    value="{{employee.empID}}">
                <div class="text-danger">
                    {{employee.empIDError}}</div>
            </div>

               <div class="form-group col-md-4">
                <label>Designation</label>
                <input type="text" class="form-control" name="designation" placeholder="Designation"
                    value="{{employee.designation}}">
                <div class="text-danger">
                    {{employee.designationError}}</div>
            </div>
        </div>
        <div class="form-row">
               <div class="form-group col-md-4">
                <label>Email</label>
                <input type="text" class="form-control" name="email" placeholder="Email" value="{{employee.email}}">
                <div class="text-danger">
                    {{employee.emailError}}</div>
            </div>
            <div class="form-group col-md-4">
                <label>Mobile</label>
                <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{employee.mobile}}">
            </div>
            <div class="form-group col-md-4">
                <label>City</label>
                <input type="text" class="form-control" name="city" placeholder="City" value="{{employee.city}}">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-4">
                <label>System Type</label>
                {{!-- <input type="text" class="form-control" name="systemType" placeholder="System Type"
                    value="{{employee.systemType}}"> --}}
                <select class="form-control" name="systemType" placeholder="System Type"
                    value="{{employee.systemType}}">
                    <option>MacBook Air</option>
                    <option>MacBook Pro</option>
                    <option>iMac</option>
                </select>
            </div>



            <div class="form-group col-md-4">
                <label>RAM</label>
                {{!-- <input type="text" class="form-control" name="ram" placeholder="RAM" value="{{employee.ram}}"> --}}
                 <select class="form-control" name="ram" placeholder="RAM"
                    value="{{employee.ram}}">
                    <option>8 GB</option>
                    <option>16 GB</option>
                    <option>32 GB</option>
                    
                </select>
            </div>
            <div class="form-group col-md-4">
                <label>Storage</label>
                {{!-- <input type="text" class="form-control" name="storage" placeholder="Storage"
                    value="{{employee.storage}}"> --}}

                  <select class="form-control" name="storage" placeholder="Storage"
                    value="{{employee.storage}}">
                    <option>256 GB</option>
                    <option>512 GB</option>
                    <option>1 TB</option>
                    
                </select>   
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-4">
                <label>Serial Number</label>
                <input type="text" class="form-control" name="serialNum" placeholder="Serial Number"
                    value="{{employee.serialNum}}">
            </div>
            <div class="form-group col-md-4">
                <label>System Password</label>
                <input type="text" class="form-control" name="systemPassword" placeholder="System Password"
                    value="{{employee.systemPassword}}">
            </div>
            <div class="form-group col-md-4">
                <label>Chipset</label>
                {{!-- <input type="text" class="form-control" name="chipset" placeholder="Chipset"
                    value="{{employee.chipset}}"> --}}
                     <select class="form-control" name="chipset" placeholder="Chipset"
                    value="{{employee.chipset}}">
                    <option>M1</option>
                    <option>M2</option>
                </select>   
            </div>
        </div>

        <div class="form-group" align="center">
            <button type="submit" class="btn btn-lg btn-success"><i class="fa fa-database"></i> Submit</button>
            <a class="btn btn-lg btn-secondary" href="/employee/list"><i class="fa fa-list-alt"></i> View All</a>
        </div>
    </form>
</div>